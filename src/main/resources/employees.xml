<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

       xmlns:context="http://www.springframework.org/schema/context"

       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd

        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-util-3.2.xsd">


    <context:annotation-config/>
    <context:component-scan base-package="com"/>

    <bean id="denis" class="com.models.Employee">
        <constructor-arg value="Denis"/>
    </bean>
    <bean id="wowa" class="com.models.Employee">
        <constructor-arg value="Wowa"/>
    </bean>
    <bean id="pavlik" class="com.models.Employee">
        <constructor-arg value="Pavlik"/>
    </bean>

    <bean id="employeeService" class="com.services.EmployeeService"/>
    <bean id="positionService" class="com.services.PositionService"/>
    <bean id="salaryService" class="com.services.SalaryService"/>

</beans>